# ==================== 目标系统配置 ====================
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_xiaomi_mi-router-ax3000t=y
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_OPTIMIZATION="-Os -pipe"
CONFIG_SOFT_FLOAT=n

# ==================== 硬件驱动（必须！） ====================
CONFIG_PACKAGE_kmod-mt7986-firmware=y    # WiFi 6固件
CONFIG_PACKAGE_kmod-mt7915e=y            # WiFi 6驱动
CONFIG_PACKAGE_kmod-mt798x-firmware=y
CONFIG_PACKAGE_kmod-mediatek_hnat=y      # 硬件NAT加速
CONFIG_PACKAGE_kmod-hwmon-pwmfan=y       # 风扇控制
CONFIG_PACKAGE_kmod-i2c-core=y
CONFIG_PACKAGE_kmod-i2c-ralink=y
CONFIG_PACKAGE_uboot-envtools=y          # UBoot工具

# ==================== 核心系统包 ====================
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_ca-bundle=y
CONFIG_PACKAGE_ca-certificates=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_dnsmasq_full_dhcpv6=y
CONFIG_PACKAGE_firewall4=y
CONFIG_PACKAGE_nftables=y
CONFIG_PACKAGE_ppp=y
